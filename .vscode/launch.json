        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/web",
            "program": "${workspaceFolder}/web/manage.py",
            "args": [
                "runserver",
            ],
            "django": true
        },
    ]
}